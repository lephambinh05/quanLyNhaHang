@page
@model dynamic
@{
    ViewData["Title"] = "Đặt hàng online";
}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <form class="row g-2 mb-3">
                        <div class="col-md-4">
                            <select class="form-select">
                                <option>-- Danh mục --</option>
                                <option>Gà rán</option>
                                <option>Burger</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <select class="form-select">
                                <option>-- Chi nhánh --</option>
                                <option>KFC Nguyễn Trãi</option>
                                <option>KFC Lê Lợi</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control" placeholder="Tìm kiếm món...">
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-md-4 mb-3" >
                            <div class="card h-100 border-0 shadow-sm">
                                <img src="/img/ga-ran.jpg" class="card-img-top" alt="Gà rán">
                                <div class="card-body">
                                    <h5 class="card-title">Gà rán giòn cay</h5>
                                    <p class="card-text">Giòn rụm, cay nhẹ, thơm ngon.</p>
                                    <div class="mb-2"><span class="fw-bold text-danger">45,000đ</span></div>
                                    <button class="btn btn-primary w-100"><i class="fa fa-cart-plus me-2"></i>Thêm vào giỏ</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3" >
                            <div class="card h-100 border-0 shadow-sm">
                                <img src="/img/burger.jpg" class="card-img-top" alt="Burger">
                                <div class="card-body">
                                    <h5 class="card-title">Burger gà</h5>
                                    <p class="card-text">Bánh mềm, gà tươi, sốt đặc biệt.</p>
                                    <div class="mb-2"><span class="fw-bold text-danger">39,000đ</span></div>
                                    <button class="btn btn-primary w-100"><i class="fa fa-cart-plus me-2"></i>Thêm vào giỏ</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white fw-bold">Giỏ hàng</div>
                <div class="card-body">
                    <ul class="list-group mb-3">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Gà rán giòn cay <span class="badge bg-primary rounded-pill">2</span>
                            <span>90,000đ</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Burger gà <span class="badge bg-primary rounded-pill">1</span>
                            <span>39,000đ</span>
                        </li>
                    </ul>
                    <div class="mb-3 text-end">
                        <span class="fw-bold">Tổng: <span class="text-danger">129,000đ</span></span>
                    </div>
                    <button class="btn btn-success w-100"><i class="fa fa-check me-2"></i>Đặt hàng</button>
                </div>
            </div>
        </div>
    </div>
</div> 