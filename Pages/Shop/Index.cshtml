@page
@model NhaHang.Pages.Shop.IndexModel
@{
    ViewData["Title"] = "Danh sách chi nhánh";
}
<div class="container py-4">
    <h2 class="mb-4 text-center">Danh sách chi nhánh</h2>
    <div class="row">
        @if (Model.ChiNhanhs.Any())
        {
            @foreach (var cn in Model.ChiNhanhs)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@cn.TenChiNhanh</h5>
                            <p class="card-text">@cn.DiaChi</p>
                            <p class="card-text"><b>Quản lý:</b> @cn.TenQuanLy</p>
                            <p class="card-text"><b>Điện thoại:</b> @cn.SoDienThoai</p>
                            <p class="card-text"><b>Email:</b> @cn.Email</p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p class="text-muted">Chưa có chi nhánh nào.</p>
            </div>
        }
    </div>
</div> 