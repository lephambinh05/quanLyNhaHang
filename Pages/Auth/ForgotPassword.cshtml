@page
@model NhaHang.Pages.Auth.ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<link rel="stylesheet" href="~/css/auth.css" />

<div class="auth-container">
    <div class="auth-left">
        <div class="auth-left-content">
            <h1 class="auth-left-title">NhaHangChain</h1>
            <p class="auth-left-subtitle">Chúng tôi sẽ giúp bạn khôi phục mật khẩu một cách an toàn</p>
        </div>
    </div>
    
    <div class="auth-right">
        <div class="auth-form-container">
            <div class="auth-form-header">
                <h1 class="auth-form-title">Quên mật khẩu</h1>
                <p class="auth-form-subtitle">Nhập email để đặt lại mật khẩu</p>
            </div>
            
            <div class="info-box">
                <i class="fas fa-info-circle"></i>
                <strong>Hướng dẫn:</strong> Nhập địa chỉ email đã đăng ký, chúng tôi sẽ gửi link đặt lại mật khẩu đến email của bạn.
            </div>
            
            @if (Model.Success)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle me-2"></i>
                    <strong>Thành công!</strong> Chúng tôi đã gửi email hướng dẫn đặt lại mật khẩu đến <b>@Model.Email</b>. Vui lòng kiểm tra hộp thư của bạn.
                </div>
            }
            else
            {
                <form method="post">
                    <div class="form-group">
                        <input type="email" name="Email" class="form-control" placeholder="Email" value="@Model.Email" required />
                    </div>
                    
                    <button type="submit" class="btn btn-auth">
                        <i class="fas fa-paper-plane me-2"></i>
                        Gửi email đặt lại mật khẩu
                    </button>
                </form>
                
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @Model.ErrorMessage
                    </div>
                }
                
                <div class="auth-links">
                    <a href="/Auth/Login">Quay lại đăng nhập</a>
                    <br>
                    <a href="/Auth/Register">Chưa có tài khoản? Đăng ký ngay</a>
                </div>
            }
        </div>
    </div>
</div> 