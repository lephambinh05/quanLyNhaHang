@page
@model NhaHang.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}
<div class="container py-4">
    <h2 class="mb-4 text-center">Đăng ký tài khoản</h2>
    @if (Model.Success)
    {
        <div class="alert alert-success">Đăng ký thành công! Bạn có thể <a href="/Auth/Login">đăng nhập</a> ngay.</div>
    }
    else
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Họ tên</label>
                <input type="text" name="HoTen" class="form-control" value="@Model.HoTen" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="Email" class="form-control" value="@Model.Email" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Mật khẩu</label>
                <input type="password" name="MatKhau" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Số điện thoại</label>
                <input type="text" name="SoDienThoai" class="form-control" value="@Model.SoDienThoai" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Địa chỉ</label>
                <input type="text" name="DiaChi" class="form-control" value="@Model.DiaChi" required />
            </div>
            <button type="submit" class="btn btn-danger">Đăng ký</button>
        </form>
    }
</div> 