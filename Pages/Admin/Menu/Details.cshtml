@page
@model NhaHang.Pages.Menu.DetailsModel
@{
    ViewData["Title"] = "Chi tiết món ăn";
}
<div class="col-lg-7 mx-auto">
    <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white fw-bold">Chi tiết món ăn</div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Mã món</dt>
                <dd class="col-sm-8">@Model.Dish?.MaMonAn</dd>
                <dt class="col-sm-4">Tên món</dt>
                <dd class="col-sm-8">@Model.Dish?.TenMonAn</dd>
                <dt class="col-sm-4">Danh mục</dt>
                <dd class="col-sm-8">@Model.Dish?.MaDanhMuc</dd>
                <dt class="col-sm-4">Chi nhánh</dt>
                <dd class="col-sm-8">@Model.Dish?.MaChiNhanh</dd>
                <dt class="col-sm-4">Giá</dt>
                <dd class="col-sm-8">@Model.Dish?.Gia.ToString("N0")</dd>
                <dt class="col-sm-4">Mức cay</dt>
                <dd class="col-sm-8">@Model.Dish?.MucCay/7</dd>
                <dt class="col-sm-4">Hình ảnh</dt>
                <dd class="col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.Dish?.HinhAnh))
                    {
                        <img src="@Model.Dish.HinhAnh" alt="@Model.Dish.TenMonAn" style="max-width:120px;" />
                    }
                </dd>
                <dt class="col-sm-4">Có sẵn</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.Dish?.CoSan == true ? "bg-success" : "bg-danger")">@(Model.Dish?.CoSan == true ? "Có" : "Hết")</span>
                </dd>
            </dl>
            <div class="text-end mt-4">
                <a asp-page="Edit" asp-route-id="@Model.Dish?.MaMonAn" class="btn btn-success me-2">Sửa</a>
                <a asp-page="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </div>
</div> 