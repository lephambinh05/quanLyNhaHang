@page
@model NhaHang.Pages.Menu.DeleteModel
@{
    ViewData["Title"] = "Xóa món ăn";
}
<div class="col-lg-6 mx-auto">
    <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white fw-bold text-danger">Xác nhận xóa món ăn</div>
        <div class="card-body">
            <div class="alert alert-danger mb-4">
                <i class="fa fa-exclamation-triangle me-2"></i>Bạn có chắc chắn muốn xóa món <strong>@Model.Dish?.TenMonAn</strong> không? Thao tác này không thể hoàn tác!
            </div>
            <form method="post">
                <input type="hidden" asp-for="Dish.MaMonAn" />
                <div class="text-end">
                    <a asp-page="Index" class="btn btn-secondary me-2">Hủy</a>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </div>
            </form>
        </div>
    </div>
</div> 