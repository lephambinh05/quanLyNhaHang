 @page
@model NhaHang.Pages.Menu.IndexModel
@{
    ViewData["Title"] = "Quản lý thực đơn";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">Danh sách món ăn</h3>
    <a class="btn btn-primary" asp-page="Create"><i class="fa fa-plus me-2"></i>Thêm món</a>
</div>
<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Mã món</th>
                        <th>Tên món</th>
                        <th>Danh mục</th>
                        <th>Chi nhánh</th>
                        <th>Giá</th>
                        <th>Mức cay</th>
                        <th>Có sẵn</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var dish in Model.Dishes)
                {
                    <tr>
                        <td>@dish.MaMonAn</td>
                        <td>@dish.TenMonAn</td>
                        <td>@dish.MaDanhMuc</td>
                        <td>@dish.MaChiNhanh</td>
                        <td>@dish.Gia.ToString("N0")</td>
                        <td>@dish.MucCay</td>
                        <td><span class="badge @(dish.CoSan ? "bg-success" : "bg-danger")">@(dish.CoSan ? "Có" : "Hết")</span></td>
                        <td>
                            <a class="btn btn-sm btn-success me-1" asp-page="Edit" asp-route-id="@dish.MaMonAn"><i class="fa fa-edit"></i></a>
                            <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="@dish.MaMonAn"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div> 