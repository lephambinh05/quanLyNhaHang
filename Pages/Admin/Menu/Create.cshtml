@page
@model dynamic
@{
    ViewData["Title"] = "Thêm món ăn";
}
<div class="col-lg-7 mx-auto">
    <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white fw-bold">Thêm món ăn mới</div>
        <div class="card-body">
            <form enctype="multipart/form-data" method="post">
                <div class="mb-3">
                    <label class="form-label">Mã món</label>
                    <input type="text" class="form-control" name="Dish.MaMonAn" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Tên món</label>
                    <input type="text" class="form-control" name="Dish.TenMonAn" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Danh mục</label>
                    <select class="form-select" name="Dish.MaDanhMuc" required>
                        <option>Gà rán</option>
                        <option>Burger</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Chi nhánh</label>
                    <select class="form-select" name="Dish.MaChiNhanh" required>
                        <option>KFC Nguyễn Trãi</option>
                        <option>KFC Lê Lợi</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Giá</label>
                    <input type="number" class="form-control" name="Dish.Gia" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Mức cay</label>
                    <input type="number" class="form-control" name="Dish.MucCay" min="0" max="7" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Hình ảnh</label>
                    <input type="file" class="form-control" name="ImageFile" accept="image/*" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Có sẵn</label>
                    <select class="form-select" name="Dish.CoSan">
                        <option value="true">Có</option>
                        <option value="false">Hết</option>
                    </select>
                </div>
                <div class="text-end">
                    <a asp-page="Index" class="btn btn-secondary me-2">Hủy</a>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div> 