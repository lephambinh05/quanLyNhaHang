@page
@model dynamic
@{
    ViewData["Title"] = "Sửa món ăn";
}
<div class="col-lg-7 mx-auto">
    <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white fw-bold">Sửa thông tin món ăn</div>
        <div class="card-body">
            <form>
                <div class="mb-3">
                    <label class="form-label">Mã món</label>
                    <input type="text" class="form-control" value="GA01" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Tên món</label>
                    <input type="text" class="form-control" value="Gà rán giòn cay" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Danh mục</label>
                    <select class="form-select" required>
                        <option selected>Gà rán</option>
                        <option>Burger</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Chi nhánh</label>
                    <select class="form-select" required>
                        <option selected>KFC Nguyễn Trãi</option>
                        <option>KFC Lê Lợi</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Giá</label>
                    <input type="number" class="form-control" value="45000" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Mức cay</label>
                    <input type="number" class="form-control" value="3" min="0" max="7" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Hình ảnh</label>
                    <input type="text" class="form-control" value="/img/ga-ran.jpg" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Có sẵn</label>
                    <select class="form-select">
                        <option selected>Có</option>
                        <option>Hết</option>
                    </select>
                </div>
                <div class="text-end">
                    <a asp-page="Index" class="btn btn-secondary me-2">Hủy</a>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div> 