@page
@model dynamic
@{
    ViewData["Title"] = "Quản lý chi nhánh";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="mb-0">Danh sách chi nhánh</h3>
    <a class="btn btn-primary" asp-page="Create"><i class="fa fa-plus me-2"></i>Thêm chi nhánh</a>
</div>
<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <form class="row g-2 mb-3">
            <div class="col-md-4">
                <input type="text" class="form-control" placeholder="Tìm kiếm theo tên, địa chỉ...">
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-primary w-100"><i class="fa fa-search"></i> Tìm</button>
            </div>
        </form>
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Mã CN</th>
                        <th>Tên chi nhánh</th>
                        <th>Địa chỉ</th>
                        <th>SĐT</th>
                        <th>Email</th>
                        <th>Quản lý</th>
                        <th>Ngày tạo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>CN01</td>
                        <td>KFC Nguyễn Trãi</td>
                        <td>123 Nguyễn Trãi, Q.1</td>
                        <td>0901234567</td>
                        <td>kfc.nguyentrai@email.com</td>
                        <td>Nguyễn Văn A</td>
                        <td>01/01/2024</td>
                        <td>
                            <a class="btn btn-sm btn-success me-1" asp-page="Edit" asp-route-id="CN01"><i class="fa fa-edit"></i></a>
                            <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="CN01"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                    <tr>
                        <td>CN02</td>
                        <td>KFC Lê Lợi</td>
                        <td>45 Lê Lợi, Q.1</td>
                        <td>0902345678</td>
                        <td>kfc.leloi@email.com</td>
                        <td>Trần Thị B</td>
                        <td>05/01/2024</td>
                        <td>
                            <a class="btn btn-sm btn-success me-1" asp-page="Edit" asp-route-id="CN02"><i class="fa fa-edit"></i></a>
                            <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-id="CN02"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div> 