@page
@model NhaHang.Pages.Admin.AdminLoginModel
@{
    ViewData["Title"] = "Đăng nhập Admin";
    Layout = "_AdminLoginLayout";
}

<div class="admin-login-card">
    <div class="admin-login-header">
        <h1 class="admin-login-title">Admin Login</h1>
        <p class="admin-login-subtitle">Đăng nhập vào hệ thống quản trị</p>
    </div>
    
    @if (Model.Success)
    {
        <div class="admin-alert admin-alert-success">
            <i class="fas fa-check-circle me-2"></i>
            Đăng nhập thành công! Chuyển hướng đến Dashboard...
        </div>
    }
    else
    {
        <form method="post">
            <div class="admin-form-group">
                <label class="admin-form-label" for="email">Email</label>
                <input type="email" id="email" name="Input.Email" class="admin-form-control" placeholder="admin@nhahang.com" value="@Model.Input.Email" required />
            </div>
            
            <div class="admin-form-group">
                <label class="admin-form-label" for="password">Mật khẩu</label>
                <input type="password" id="password" name="Input.Password" class="admin-form-control" placeholder="Nhập mật khẩu" required />
            </div>
            
            <button type="submit" class="admin-btn admin-btn-primary w-100">
                <i class="fas fa-sign-in-alt me-2"></i>
                Đăng nhập
            </button>
        </form>
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="admin-alert admin-alert-danger mt-3">
                <i class="fas fa-exclamation-circle me-2"></i>
                @Model.ErrorMessage
            </div>
        }
    }
</div> 