@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <div class="admin-sidebar">
            <div class="admin-sidebar-header">
                <h1 class="admin-sidebar-title">NhaHangChain</h1>
            </div>
            <nav class="admin-sidebar-nav">
                <a href="/Admin/Dashboard" class="admin-nav-item @(ViewContext.RouteData.Values["Page"]?.ToString() == "/Admin/Dashboard" ? "active" : "")">
                    <i class="fas fa-tachometer-alt"></i>
                    Dashboard
                </a>
                <a href="/Admin/Branches" class="admin-nav-item @(ViewContext.RouteData.Values["Page"]?.ToString().Contains("/Admin/Branches") ? "active" : "")">
                    <i class="fas fa-building"></i>
                    Chi nhánh
                </a>
                <a href="/Admin/Menu" class="admin-nav-item @(ViewContext.RouteData.Values["Page"]?.ToString().Contains("/Admin/Menu") ? "active" : "")">
                    <i class="fas fa-utensils"></i>
                    Thực đơn
                </a>
                <a href="/Admin/Orders" class="admin-nav-item @(ViewContext.RouteData.Values["Page"]?.ToString().Contains("/Admin/Orders") ? "active" : "")">
                    <i class="fas fa-shopping-cart"></i>
                    Đơn hàng
                </a>
                <a href="/Admin/Marketing" class="admin-nav-item @(ViewContext.RouteData.Values["Page"]?.ToString().Contains("/Admin/Marketing") ? "active" : "")">
                    <i class="fas fa-bullhorn"></i>
                    Khuyến mãi
                </a>
                <a href="/Admin/QuanTriVien" class="admin-nav-item @(ViewContext.RouteData.Values["Page"]?.ToString().Contains("/Admin/QuanTriVien") ? "active" : "")">
                    <i class="fas fa-users"></i>
                    Quản trị viên
                </a>
                <a href="/Admin/Reports" class="admin-nav-item @(ViewContext.RouteData.Values["Page"]?.ToString().Contains("/Admin/Reports") ? "active" : "")">
                    <i class="fas fa-chart-bar"></i>
                    Báo cáo
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="admin-main">
            <!-- Header -->
            <div class="admin-header">
                <h2 class="admin-header-title">@ViewData["Title"]</h2>
                <div class="admin-user-info">
                    <div class="admin-user-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div>
                        <strong>Admin</strong><br>
                        <small>Quản trị viên</small>
                    </div>
                    <a href="/Admin/Logout" class="admin-btn admin-btn-secondary">
                        <i class="fas fa-sign-out-alt"></i>
                        Đăng xuất
                    </a>
                </div>
            </div>

            <!-- Content -->
            <div class="admin-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 