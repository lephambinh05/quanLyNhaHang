@page
@model NhaHang.Pages.Marketing.DeleteModel
@{
    ViewData["Title"] = "Xóa khuyến mãi";
}
<div class="col-lg-6 mx-auto">
    <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-white fw-bold text-danger">Xác nhận xóa khuyến mãi</div>
        <div class="card-body">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }
            <div class="alert alert-danger mb-4">
                <i class="fa fa-exclamation-triangle me-2"></i>Bạn có chắc chắn muốn xóa khuyến mãi <strong>@Model.Promotion.MaGiamGia</strong> không? Thao tác này không thể hoàn tác!
            </div>
            <form method="post">
                <input type="hidden" asp-for="Promotion.MaKhuyenMai" />
                <div class="text-end">
                    <a asp-page="Index" class="btn btn-secondary me-2">Hủy</a>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </div>
            </form>
        </div>
    </div>
</div> 