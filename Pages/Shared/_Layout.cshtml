@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NhaHangChain</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <style>
        body { background: #f8f9fa; }
        .navbar-brand { font-weight: bold; }
        .hero-section { background: linear-gradient(135deg, #d32f2f, #b71c1c); }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fa-solid fa-drumstick-bite me-2"></i>NhaHangChain
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Menu">Thực đơn</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Shop/Create">Đặt hàng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Shop">Đơn hàng của tôi</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/login" target="_blank">
                            <i class="fa-solid fa-shield-halved me-1"></i>Quản trị
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5><i class="fa-solid fa-drumstick-bite me-2"></i>NhaHangChain</h5>
                    <p class="text-muted">Hệ thống chuỗi nhà hàng hàng đầu với thực đơn đa dạng và dịch vụ chất lượng.</p>
                </div>
                <div class="col-md-4">
                    <h6>Liên hệ</h6>
                    <ul class="list-unstyled text-muted">
                        <li><i class="fa-solid fa-phone me-2"></i>1900-1234</li>
                        <li><i class="fa-solid fa-envelope me-2"></i>info@nhahangchain.com</li>
                        <li><i class="fa-solid fa-map-marker-alt me-2"></i>123 Đường ABC, Quận 1, TP.HCM</li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6>Theo dõi chúng tôi</h6>
                    <div class="d-flex gap-2">
                        <a href="#" class="text-white"><i class="fa-brands fa-facebook fa-lg"></i></a>
                        <a href="#" class="text-white"><i class="fa-brands fa-instagram fa-lg"></i></a>
                        <a href="#" class="text-white"><i class="fa-brands fa-twitter fa-lg"></i></a>
                    </div>
                </div>
            </div>
            <hr class="my-3">
            <div class="text-center text-muted">
                &copy; @DateTime.Now.Year - NhaHangChain. Powered by .NET Razor Pages.
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
